<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="3"
    android:orientation="vertical"
    tools:context=".UserSide.ChatActivity">
<androidx.appcompat.widget.Toolbar
    android:id="@+id/toolbar"
    android:layout_weight="1"
    android:background="@color/colorPrimaryDark"
    app:titleTextColor="@color/white"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    app:titleMarginStart="30dp"
    app:subtitleTextColor="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

</androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tgl"
            android:text="25 May 2020"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView

            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:textColor="@color/white"
            android:text="Hi there. Waa join hangout ?"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/roundedcorner"
            android:layout_below="@+id/tgl"
            android:layout_width="190dp"
            android:layout_height="64dp" />
        <ImageView
            android:id="@+id/picture_chat"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="50dp"
            android:layout_below="@id/tgl"
            android:background="@drawable/ic_dog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/chat2"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:textColor="@color/colorAccent"
            android:text="No"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/roundedcorner2"
            android:layout_width="53dp"
            android:layout_height="47dp" />
        <TextView
            android:layout_below="@id/chat2"
            android:paddingLeft="15dp"
            android:textColor="@color/colorAccent"
            android:text="seen"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="17dp"
            android:layout_width="53dp"
            android:layout_height="47dp" />

    </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="200dp"
        android:layout_weight="1"
        android:weightSum="2">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Enter the Message"
            android:textColor="@color/colorAccent" />

        <Button
            android:layout_weight="1"
            android:textColor="@color/white"
            android:background="@drawable/round"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send"/>

    </LinearLayout>

</LinearLayout>
</ScrollView>