<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserSide.PetMart">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dog Mart"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:textColor="@android:color/black"
        android:textSize="39dp"/>
    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        app:cardBackgroundColor="@color/yellow"
        app:cardCornerRadius="10dp"
        app:cardElevation="15dp"
        android:id="@+id/registerbreeder">
        <TextView
            android:layout_width="181dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:text="REGISTER AS A BREEDER"
            android:textColor="@android:color/black"
            android:textSize="25dp"/>
        <ImageView
            android:layout_width="102dp"
            android:layout_height="81dp"
            android:src="@drawable/ic_q"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="320dp"
        app:cardBackgroundColor="@color/yellow"
        app:cardCornerRadius="10dp"
        app:cardElevation="15dp"
        android:id="@+id/skip">
        <ImageView
            android:layout_width="102dp"
            android:layout_height="81dp"
            android:src="@drawable/skipsign"/>
        <TextView
            android:layout_width="181dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:text="SKIP THESE REGISTRATION"
            android:textColor="@android:color/black"
            android:textSize="23dp"/>

    </androidx.cardview.widget.CardView>
</RelativeLayout>